enum Permission {
  ADMIN
  USER
  LOCATIONCREATE
  LOCATIONUPDATE
  LOCATIONDELETE
  PERMISSIONUPDATE
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: String
  permissions: [Permission]
}


type GeoLocation {
  id: ID! @unique
  latitude: Float!
  longitude: Float!
}

type Location {
  id: ID! @unique
  country: String!
  city: String!
  geoLocation: GeoLocation!
  description: String
}

type Tour {
  id: ID! @unique
  title: String!
  locations: [Location]
}